<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.admin_applicants.ApplicantsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/applicantsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service Provider Applications"
        android:textSize="24sp"
        android:layout_marginBottom="15dp"
        android:textColor="#000000"/>

    <!-- RecyclerView for the list of applicants -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/applicantsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/applicantsTitle"
        android:scrollbars="vertical"/>

    </LinearLayout>
</RelativeLayout>