<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/dialogBusinessName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Business: "
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/dialogRepresentativeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Representative: "
        android:textSize="16sp"
        android:textColor="#555555"/>

    <TextView
        android:id="@+id/dialogLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location: "
        android:textSize="16sp"
        android:textColor="#555555"/>

    <TextView
        android:id="@+id/dialogServicesOffered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Services: "
        android:textSize="16sp"
        android:textColor="#555555"/>

    <Button
        android:id="@+id/btnViewPermit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Business Permit"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnApprove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Approve"
        android:backgroundTint="#4CAF50"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/btnReject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reject"
        android:backgroundTint="@color/kayantabe_secondary_variant"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:textSize="16sp"/>
</LinearLayout>